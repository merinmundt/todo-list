<h1 class="text-center">Welcome to the FAIT Todo Task List </h1>

<div id="tasks-container" class="pt-3">
<%= render partial: "tasks", locals: { tasks: @tasks } %>
</div>

<div class="text-center">
<%= button_tag "Create New Employee", type: "button", class: "btn btn-primary p-3 rounded-4 mx-3", onclick: "window.location.href='#{new_employee_path}'" %>
<%= button_tag "Create New Task", type: "button", class: "btn btn-primary p-3 rounded-4 mx-3", onclick: "window.location.href='#{new_task_path}'" %>
<%= button_tag "See All Employees", type: "button", class: "btn btn-primary p-3 rounded-4 mx-3", onclick: "window.location.href='#{employees_path}'" %>

</div>

</div>